<div id="skinny_wrapper">

<div id="send-pin">
  <h3>Enter Phone Number</h3>
  <hr>
  <%= form_for @phone_number, remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
    <%= f.submit "Send PIN", class: "btn btn-twilio", id: 'send-pin-link' %>
  <% end %>
</div>

<div id="verify-pin">
<h3>Enter your PIN</h3>
<%= form_tag phone_numbers_verify_path, remote: true do |f| %>
  <%= hidden_field_tag 'hidden_phone_number', '' %>
  <div class="form-group">
    <%= text_field_tag :pin, class: 'form-control' %>
  </div>
  <hr>
  <%= submit_tag "Verify PIN", class: "btn btn-twilio" %>
  <% end %>
</div>
 
